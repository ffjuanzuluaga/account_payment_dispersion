<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="account_payment_dispersion_inherit_view_account_journal_form" model="ir.ui.view">
            <field name="name">account.payment.dispersion.inherit.view.account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="account_number" attrs="{'invisible': [('type', '!=', 'bank')]}"/>
                    <field name="account_type" attrs="{'invisible': [('type', '!=', 'bank')]}"/>
                </xpath>
            </field>
        </record>
	</data>
</odoo>